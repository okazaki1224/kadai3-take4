<% if flash[:notice] %>
  <p id=notice>
    <%= flash[:notice] %>
  </p>
<% end %>

<div class="container">
 <div class="row">
     
<div class="col-lg-4">
<%= render 'books/list', user: @user, book: @new_book %>
</div>

<div class="col-lg-8"> 
<h1>Books</h1>
    <table class="table table-striped">
      <thead>
        <tr>
         <th></th>
         <th>Title</th>
         <th>Opinion</th>
        </tr>
      </thead>
      
      <tbody>
        <% @books.each do |book| %>
      <tr>
       <td>
        <%= link_to user_path(book.user.id) do %> 
         <%= image_tag book.user.get_profile_image(100,100) %>
        <% end %> 
       </td>
       <td>
         <%= link_to book_path(book.id) do %>
         <%= book.title %>
         <% end %>
       </td>
       <td><%= book.body %></td>
      </tr>
       <% end %>
      </tbody>
    
    </table>
 </div>
   
  </div>
</div>