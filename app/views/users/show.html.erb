<% if flash[:notice] %>
  <p id=notice>
    <%= flash[:notice] %>
  </p>
<% end %>

<%= render 'books/list', user: @user, book: @new_book %>

<p>～～～～～ここから右～～～～～</p>

<h1>Books</h1>
    <table class="table table-striped">
      <thead>
        <tr>
         <th></th>
         <th>Title</th>
         <th>Opinion</th>
        </tr>
      </thead>
      
      <tbody>
        <% @books.each do |book| %>
      <tr>
