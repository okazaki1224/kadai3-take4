<% if flash[:notice] %>
  <p id=notice>
    <%= flash[:notice] %>
  </p>
<% end %>

<%= render 'books/list', user: @user, book: @new_book %>

<p>～～～～～ここから右～～～～～</p>

<h1>Books</h1>
<h2>Title</h2>
<h2>Opinion</h2>

  <% @books.each do |book| %>
    <div>
      <%= image_tag book.user.get_profile_image(100,100) %>
      <%= link_to book_path(book.id) do %>
      <%= book.title %>
      <% end %>
      <%= book.body %>
    </div>
  <% end %>
  