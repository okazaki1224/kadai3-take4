<h1>User info</h1>
<%= image_tag user.get_profile_image(100,100) %>
<%= user.name %></br>
<%= user.introduction %></br>
<% if user == current_user %>
  <%= link_to"→ここに後でeditボタン",edit_user_path(user.id) %>
<% else %>
  <%= link_to "→ここに後でeditボタン",user_path(current_user.id) %>
<% end %>

<h1>New book</h1>
  <%= form_with model: book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>
  