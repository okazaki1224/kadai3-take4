<h1>User info</h1>
<p>プロフィール画像</p>

<%= user.name %></br>
<%= user.introduction %></br>

<%= link_to"→ここに後でeditボタン",edit_user_path(user.id) %>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %><br>

    <%= f.submit 'Create Book' %>
  <% end %>
  