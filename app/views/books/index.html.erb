<%= render 'list', user: current_user,book: @book %>

    
      <table class="table table-striped">
      <thead>
        <tr>
         <th>Books</th>
         <th>Title</th>
         <th>Opinion</th>
        </tr>
      </thead>
      
      <tbody>
        <% @books.each do |book| %>
      <tr>
       <td>
         <%= link_to user_path(book.user.id) do %>
         <%= image_tag book.user.get_profile_image(100,100) %>
         <% end %> 
       </td>
       <td>
         <%= link_to book_path(book.id) do %>
          <p><%= book.title %></p>
         <% end %>
       </td>
       <td><%= book.body %></td>
      </tr></br>
       <% end %>
      </tbody>
    
    </table>
