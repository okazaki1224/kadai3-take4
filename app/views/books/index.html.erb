<% if @book.errors.any? %>
  <h2><%= pluralize(@book.errors.count,"error") %> prohibited this obj from being saved:</h2>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
   </ul>
  <% end %>
  
<div class="container">
 <div class="row">
  
<div class="col-lg-4">
<%= render 'list', user: current_user,book: @book %>
</div>

 <div class="col-lg-8"> 
 <h1>Books</h1>
   <table class="table table-striped">
    <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
      </tr>
    </thead>
      
      <tbody>
        <% @books.each do |book| %>
      <tr>
       <td>
         <%= link_to user_path(book.user.id) do %>
         <%= image_tag book.user.get_profile_image(100,100) %>
         <% end %> 
       </td>
       <td>
         <%= link_to book_path(book.id) do %>
          <p><%= book.title %></p>
         <% end %>
       </td>
       <td><%= book.body %></td>
      </tr>
       <% end %>
      </tbody>
    
    </table>
   </div>
   
  </div>
 </div>