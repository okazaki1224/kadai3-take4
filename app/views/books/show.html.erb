<% if flash[:notice] %>
  <p id=notice>
    <%= flash[:notice] %>
  </p>
<% end %>

<div class="container">
<div class="row">
   
<div class="col-md-3">
 <%= render 'list', user: @book.user, book: @new_book %> 
</div>

<div class="col-md-8 offset-md-1"> 

   <table class="table table-striped">
     <h1>Book detail</h1>
      <tbody>
      <tr>
       <td><%= image_tag @book.user.get_profile_image(100,100) %></br>
         <%= link_to user_path(@book.user.id) do %>
   　　　　 <%= @book.user.name %>
  　　   　<% end %>
       </td>
       <td><%= @book.title %><td>
       <td><%= @book.body %></td>
       <% if @book.user==current_user %> 
       <td><%= link_to "Edit",edit_book_path,class:"btn btn-success" %></td>
       <td><%= link_to "Destroy",book_path,method: :delete, data:{confirm:"本当に消しますか？本当に？"},class:"btn btn-danger" %></td>
       <% end %>  
      </tr>
      </tbody>
    </table>
    
</div>
   </div>
  </div>
  
 
  
  

